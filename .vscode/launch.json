{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Current File",
      "args": [
        "--inspect-brk",
        "--harmony",
        "${workspaceFolder}/node_modules/jest/bin/jest",
        "${fileBasenameNoExtension}",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    }
  ]
}